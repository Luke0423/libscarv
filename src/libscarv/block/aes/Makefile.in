KERNEL          = block/aes

SOURCE_DIRS     = ${REPO_HOME}/src/libscarv/${KERNEL}/share
SOURCE_DIRS    += ${REPO_HOME}/src/libscarv/${KERNEL}/space
SOURCE_DIRS    += ${REPO_HOME}/src/libscarv/${KERNEL}/space/${ARCH}

SOURCE_HEADERS  = $(foreach DIR,${SOURCE_DIRS},$(wildcard ${DIR}/*.h))
SOURCE_SOURCES  = $(foreach DIR,${SOURCE_DIRS},$(wildcard ${DIR}/*.c))
SOURCE_SOURCES += $(foreach DIR,${SOURCE_DIRS},$(wildcard ${DIR}/*.S))

$(eval $(call generate,${KERNEL},${SOURCE_HEADERS},${SOURCE_SOURCES}))
