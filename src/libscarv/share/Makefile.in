KERNEL   = share

DIRS     = ${REPO_HOME}/src/libscarv/${KERNEL}

HEADERS  = $(foreach DIR,${DIRS},$(wildcard ${DIR}/*.h))
SOURCES  = $(foreach DIR,${DIRS},$(wildcard ${DIR}/*.c))
SOURCES += $(foreach DIR,${DIRS},$(wildcard ${DIR}/*.S))

$(eval $(call generate,${KERNEL},${HEADERS},${SOURCES}))
